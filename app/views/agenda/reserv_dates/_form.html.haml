= form_for @agenda_reserv_date do |f|
  - if @agenda_reserv_date.errors.any?
    #error_explanation
      %h2= "#{pluralize(@agenda_reserv_date.errors.count, "error")} prohibited this agenda_reserv_date from being saved:"
      %ul
        - @agenda_reserv_date.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :reservation_id
    = f.number_field :reservation_id
  .field
    = f.label :start_date_hour
    = f.date_select :start_date_hour
  .field
    = f.label :end_date_hour
    = f.date_select :end_date_hour
  .actions
    = f.submit 'Save'
