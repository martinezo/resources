= simple_form_for @reserv_msg, url: agenda_set_as_concluded_reservation_path(@reserv_msg.reservation_id),remote: true, html: { class: 'form-horizontal' }, wrapper: :horizontal_form, wrapper_mappings: {check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input, boolean: :horizontal_boolean } do |f|

  = f.error_notification

  = f.input :reservation_id, as: :hidden
  = f.input :message, label: t('activerecord.attributes.agenda/reserv_msg.conclude_msg'), as: :text, input_html: { maxlength: 250, rows: 9 }

  %hr
  .text-right
    = button_tag_fa(text: t('commands.conclude_reserv'), title: t('commands.submit'), icon: 'fa-check-square', name: t('commands.conclude_reserv'))
    = button_tag "<span class='fa fa-close'></span> #{t('commands.cancel')}".html_safe, data: { dismiss: 'modal'}, class: 'btn btn-default'
