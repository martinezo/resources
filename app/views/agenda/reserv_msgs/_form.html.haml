= form_for @agenda_reserv_msg do |f|
  - if @agenda_reserv_msg.errors.any?
    #error_explanation
      %h2= "#{pluralize(@agenda_reserv_msg.errors.count, "error")} prohibited this agenda_reserv_msg from being saved:"
      %ul
        - @agenda_reserv_msg.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :reservation_id
    = f.number_field :reservation_id
  .field
    = f.label :message
    = f.text_field :message
  .actions
    = f.submit 'Save'
