= simple_form_for @agenda_reservation, remote: true, html: { class: 'form-horizontal' }, wrapper: :horizontal_form, wrapper_mappings: {check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input, boolean: :horizontal_boolean } do |f|

  = f.error_notification
  = f.input :requester
  = f.input :email
  = f.input :phone
  = f.association :catalogs_headquarter
  = f.association :catalogs_event_type
  = f.association :catalogs_status
  = f.input :comments
  = f.input :modified_by

  %hr
  .text-right
    = f.button :submit, t('commands.save')
    = button_tag "<span class='fa fa-close'></span> #{t('commands.close')}".html_safe, data: { dismiss: 'modal'}, class: 'btn btn-default'


