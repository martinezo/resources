%table.table.table-striped.table-hover
  %thead
    %tr
      %th.col-sm-2= sortable 'abbr', t('activerecord.attributes.catalogs/department.abbr'), catalogs_departments_path
      %th.col-sm-5= sortable 'name', t('activerecord.attributes.catalogs/department.name'), catalogs_departments_path
      %th.col-sm-2
  %tbody
    - @catalogs_departments.each do |catalogs_department|
      %tr
        %td= catalogs_department.abbr
        %td= catalogs_department.name
        %td.text-center
          = link_to_fa_button({url: catalogs_department, icon: 'fa-eye', title: t('commands.show')})
          = link_to_fa_button({url: edit_catalogs_department_path(catalogs_department), icon: 'fa-pencil', title: t('commands.edit')})
          = link_to_fa_button({url: catalogs_delete_department_path(catalogs_department), icon: 'fa-trash-o', title: t('commands.delete')})
