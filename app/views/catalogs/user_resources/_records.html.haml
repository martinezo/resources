- es = 'activerecord.attributes.catalogs/user_resource'
= flash_messages(flash)
%table.table.table-striped.table-hover
  %thead
    %tr
      %th.col-sm-2= sortable 'admin_user_id', t("#{es}.admin_user_id"), catalogs_user_resources_path
      %th.col-sm-3= sortable 'resource_id', t("#{es}.resource_id"), catalogs_user_resources_path
      %th.col-sm-3= sortable 'administrator', t("#{es}..administrator"), catalogs_user_resources_path
      %th.col-sm-2
  %tbody
    - @catalogs_user_resources.each do |catalogs_user_resource|
      %tr
        %td= catalogs_user_resource.admin_user.name
        %td= catalogs_user_resource.catalogs_resource.name
        %td= catalogs_user_resource.administrator
        %td.text-center
          = link_to_fa_button({url: catalogs_user_resource, icon: 'fa-eye', title: t('commands.show'), data: {toggle: 'modal', target: '#show-dialog'}})
          = link_to_fa_button({url: edit_catalogs_user_resource_path(catalogs_user_resource), icon: 'fa-pencil', title: t('commands.edit'), data: {toggle: 'modal', target: '#new-update-dialog'}})
          = link_to_fa_button({url: catalogs_delete_user_resource_path(catalogs_user_resource), icon: 'fa-trash-o', title: t('commands.delete'), data: {toggle: 'modal', target: '#delete-dialog'}})
          = link_to_fa_button({url: catalogs_assign_resource_path(catalogs_user_resource), icon: 'fa-fire', title: t('commands.edit'), remote: false})
