%table.table.table-striped.table-hover
  %thead
    %tr
      %th.col-sm-5= sortable 'name', t('activerecord.attributes.catalogs/resource_types.name'), catalogs_resource_types_path
      %th.col-sm-5= sortable 'description', t('activerecord.attributes.catalogs/resource_types.description'), catalogs_resource_types_path
      %th.col-sm-2
  %tbody
    - @catalogs_resource_types.each do |catalogs_resource_type|
      %tr
        %td= catalogs_resource_type.name
        %td= catalogs_resource_type.description
        %td.text-center
          = link_to_fa_button({url: catalogs_resource_type, icon: 'fa-eye', title: t('commands.show')})
          = link_to_fa_button({url: edit_catalogs_resource_type_path(catalogs_resource_type), icon: 'fa-pencil', title: t('commands.edit')})
          = link_to_fa_button({url: catalogs_delete_resource_type_path(catalogs_resource_type), icon: 'fa-trash-o', title: t('commands.delete')})
